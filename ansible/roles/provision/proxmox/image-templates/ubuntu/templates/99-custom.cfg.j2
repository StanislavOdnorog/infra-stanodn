#cloud-config
# System Information
hostname: ${hostname}
fqdn: ${hostname}.{{ cloud_init_search_domains[0] }}
manage_etc_hosts: true

# User Configuration
users:
  - name: {{ cloud_init_user }}
    sudo: ALL=(ALL) NOPASSWD:ALL
    shell: /bin/bash
    lock_passwd: false
    passwd: {{ cloud_init_password | password_hash('sha512') }}
    ssh_authorized_keys:
      - {{ cloud_init_ssh_key }}

# Package Configuration
package_update: true
package_upgrade: true
package_reboot_if_required: true
packages:
  - qemu-guest-agent
  - curl
  - wget
  - git
  - vim
  - htop
  - net-tools
  - dnsutils
  - ufw
  - fail2ban

# Network Configuration
network:
  version: 2
  ethernets:
    eth0:
      dhcp4: true
      dhcp6: false
      nameservers:
        addresses: {{ cloud_init_dns_servers }}
        search: {{ cloud_init_search_domains }}

# System Configuration
timezone: UTC
locale: en_US.UTF-8
keyboard:
  layout: us
  variant: ""

# Security Configuration
ssh_pwauth: false
disable_root: true

# Final Configuration
power_state:
  mode: reboot
  delay: 1
  message: Rebooting machine after initial configuration
