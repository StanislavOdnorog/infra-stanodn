# WireGuard UI Configuration
BIND_ADDRESS=0.0.0.0:{{ wg_ui_config.port }}
WGUI_USERNAME={{ wg_ui_config.admin_username }}
WGUI_PASSWORD={{ wg_ui_config.admin_password }}

# Database configuration
WGUI_DB_CONNECTION_STRING=/var/lib/wireguard-ui/db/server/{{ wireguard_config.interface }}.db

# Server configuration
WGUI_SERVER_INTERFACE_ADDRESSES={{ wireguard_config.server_ip }}/24
WGUI_SERVER_LISTEN_PORT={{ wireguard_config.port }}

# Client defaults
WGUI_DEFAULT_CLIENT_ALLOWED_IPS=0.0.0.0/0
WGUI_DEFAULT_CLIENT_USE_SERVER_DNS=true
WGUI_DEFAULT_CLIENT_ENABLE_AFTER_CREATION=true

# Management settings
WGUI_MANAGE_START=true
WGUI_MANAGE_RESTART=true