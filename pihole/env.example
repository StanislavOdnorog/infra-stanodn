# Pi-hole Docker Environment Configuration
# Copy this file to .env and customize the values for your setup

# =============================================================================
# BASIC CONFIGURATION
# =============================================================================

# Timezone for Pi-hole logs and scheduling
# Find your timezone: https://en.wikipedia.org/wiki/List_of_tz_database_time_zones
TZ=UTC

# Admin password for Pi-hole web interface
# Change this to a strong password!
FTLCONF_webserver_api_password=your_secure_password_here

# =============================================================================
# DNS CONFIGURATION
# =============================================================================

# Custom upstream DNS servers (semicolon separated)
# Examples:
# - Cloudflare: 1.1.1.1;1.0.0.1
# - Google: 8.8.8.8;8.8.4.4
# - Quad9: 9.9.9.9;149.112.112.112
# - OpenDNS: 208.67.222.222;208.67.220.220
FTLCONF_dns_upstreams=1.1.1.1;1.0.0.1;8.8.8.8;8.8.4.4

# DNS listening mode - 'all' required for Docker bridge networks
FTLCONF_dns_listeningMode=all

# Enable DNSSEC validation (true/false)
FTLCONF_dns_dnssec=true

# Local domain name for your network (optional)
FTLCONF_dns_domain=local

# DNS privacy level (0-4)
# 0 = Show everything, 1 = Hide domains, 2 = Hide domains and clients
# 3 = Hide domains, clients, and query types, 4 = Hide everything
FTLCONF_dns_privacylevel=0

# DNS cache size (number of entries)
# Larger values use more memory but improve performance
FTLCONF_resolver_cache_size=10000

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================

# Custom network subnet for Pi-hole (optional)
# Format: 172.20.0.0/16
PIHOLE_NETWORK_SUBNET=172.20.0.0/16

# Pi-hole container IP address (optional)
# Must be within the subnet above
PIHOLE_CONTAINER_IP=172.20.0.10

# =============================================================================
# WEB INTERFACE CONFIGURATION
# =============================================================================

# Web server ports (leave as default unless you have conflicts)
# Format: 'port,[::]:port,ports,[::]:ports'
# 80 = HTTP, 443s = HTTPS with SSL
FTLCONF_webserver_port=80,[::]:80,443s,[::]:443s

# =============================================================================
# DHCP CONFIGURATION (if using Pi-hole as DHCP server)
# =============================================================================

# Enable DHCP server (true/false)
PIHOLE_DHCP_ACTIVE=false

# DHCP IP range start
PIHOLE_DHCP_START=192.168.1.100

# DHCP IP range end  
PIHOLE_DHCP_END=192.168.1.200

# DHCP router/gateway IP
PIHOLE_DHCP_ROUTER=192.168.1.1

# DHCP lease time (e.g., 24h, 1w, infinite)
PIHOLE_DHCP_LEASETIME=24h

# Domain name for DHCP clients
PIHOLE_DHCP_DOMAIN=local

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log file paths (inside container) - usually don't need to change these
FTLCONF_files_log_ftl=/var/log/pihole/FTL.log
FTLCONF_files_log_dnsmasq=/var/log/pihole/pihole.log

# Enable verbose logging (0 = disabled, 1 = enabled)
PH_VERBOSE=0

# Enable FTL log output (0 = disabled, 1 = enabled)  
TAIL_FTL_LOG=1

# =============================================================================
# SECURITY AND PERFORMANCE
# =============================================================================

# User and group IDs for file permissions
# Set to match your host system user (run: id -u && id -g)
PIHOLE_UID=1000
PIHOLE_GID=1000

# Memory limits for container
PIHOLE_MEMORY_LIMIT=512M
PIHOLE_MEMORY_RESERVATION=256M

# =============================================================================
# BACKUP AND MAINTENANCE
# =============================================================================

# Backup directory on host
PIHOLE_BACKUP_DIR=./backups

# Automatic backup frequency (optional)
# Values: daily, weekly, monthly
PIHOLE_BACKUP_FREQUENCY=weekly

# =============================================================================
# DEVELOPMENT AND DEBUGGING
# =============================================================================

# Additional packages to install in container (space separated)
# Example: curl wget nano
PIHOLE_ADDITIONAL_PACKAGES=

# Custom dnsmasq user (default: pihole)
# Some systems may require 'root'
PIHOLE_DNSMASQ_USER=pihole

# Custom FTL command options
# Example: no-daemon -- --dns-forward-max 300
PIHOLE_FTL_CMD=no-daemon

# =============================================================================
# OPTIONAL INTEGRATIONS
# =============================================================================

# Unbound recursive DNS resolver
PIHOLE_USE_UNBOUND=false

# Wireguard VPN integration
PIHOLE_WIREGUARD_ENABLED=false

# Home Assistant integration
PIHOLE_HOMEASSISTANT_ENABLED=false

# Prometheus metrics
PIHOLE_PROMETHEUS_ENABLED=false

# =============================================================================
# EXAMPLE CONFIGURATIONS
# =============================================================================

# Example 1: Home network with DHCP
# PIHOLE_DHCP_ACTIVE=true
# PIHOLE_DHCP_START=192.168.1.100
# PIHOLE_DHCP_END=192.168.1.200
# PIHOLE_DHCP_ROUTER=192.168.1.1

# Example 2: High-performance setup
# PIHOLE_CACHE_SIZE=50000
# PIHOLE_DNS_UPSTREAMS=127.0.0.1#5335  # Use with Unbound
# PIHOLE_MEMORY_LIMIT=1G

# Example 3: Privacy-focused setup  
# PIHOLE_PRIVACY_LEVEL=3
# PIHOLE_DNS_UPSTREAMS=9.9.9.9;149.112.112.112  # Quad9
# PIHOLE_DNSSEC=true

# Example 4: Development setup
# PIHOLE_VERBOSE=1
# PIHOLE_ADDITIONAL_PACKAGES=curl wget nano htop
# PIHOLE_TAIL_FTL_LOG=1