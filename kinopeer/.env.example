# ============================================================
# KinoPeer — Environment Variables
# ============================================================
# Copy to .env and fill in values.
# ============================================================

# --- PostgreSQL ---
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change-me-strong-password

# --- JWT (shared across all microservices) ---
JWT_SECRET=change-me-at-least-32-chars-jwt-secret

# --- NextAuth.js (frontend) ---
NEXTAUTH_SECRET=change-me-at-least-32-chars-secret
NEXTAUTH_URL=https://kinopeer.stanodn.org
AUTH_TRUST_HOST=true

# --- Google OAuth ---
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_OAUTH_REDIRECT_URI=https://kinopeer.stanodn.org/api/v1/auth/oauth2/callback/google

# --- Supabase (optional — Storage) ---
NEXT_PUBLIC_SUPABASE_URL=https://[YOUR-PROJECT-REF].supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# --- Email (Resend — frontend) ---
RESEND_API_KEY=re_your_resend_api_key

# --- SMTP (Notifications Service) ---
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@kinopeer.com

# --- Docker image tag (default: latest) ---
IMAGE_TAG=latest
